{
  "name": "@neet/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "if [ ! -f ./dist/index.css ]; then tailwindcss -i ./src/styles.css -o ./dist/index.css; else echo 'CSS already built'; fi",
    "build:components": "if [ ! -f ./dist/index.js ]; then tsc; else echo 'Components already built'; fi",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.290.0",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.33.0",
    "tailwindcss": "^4.1.5",
    "typescript": "5.9.2"
  }
}
